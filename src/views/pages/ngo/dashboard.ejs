<div class="container mx-auto px-4 py-6">
  <h1 class="text-2xl font-bold mb-1">NGO Dashboard</h1>
  <p class="text-sm text-gray-600 mb-4">Welcome NGO</p>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
    <div class="p-4 bg-white shadow rounded">
      <p class="text-sm text-gray-500">Total Donations Received</p>
      <p class="text-2xl font-semibold">--</p>
    </div>
    <div class="p-4 bg-white shadow rounded">
      <p class="text-sm text-gray-500">Active Campaigns</p>
      <p class="text-2xl font-semibold"><%= (campaigns||[]).length %></p>
    </div>
    <div class="p-4 bg-white shadow rounded">
      <p class="text-sm text-gray-500">Volunteer Requests</p>
      <p class="text-2xl font-semibold">--</p>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <div class="p-4 bg-white shadow rounded">
      <h2 class="font-semibold mb-4">Create Campaign</h2>
      <form id="campaignForm" class="space-y-4">
        <div>
          <label class="block text-sm mb-1">Title <span class="text-red-600">*</span></label>
          <input type="text" name="title" required class="w-full border rounded px-3 py-2" placeholder="Campaign title" />
        </div>
        <div>
          <label class="block text-sm mb-1">Description</label>
          <textarea name="description" rows="3" class="w-full border rounded px-3 py-2" placeholder="Describe your campaign"></textarea>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-3">
          <div>
            <label class="block text-sm mb-1">Target Amount (â‚¹)</label>
            <input type="number" name="targetAmount" min="0" class="w-full border rounded px-3 py-2" />
          </div>
          <div>
            <label class="block text-sm mb-1">Start Date</label>
            <input type="date" name="startDate" class="w-full border rounded px-3 py-2" />
          </div>
          <div>
            <label class="block text-sm mb-1">End Date</label>
            <input type="date" name="endDate" class="w-full border rounded px-3 py-2" />
          </div>
        </div>
        <div>
          <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded">Submit For Approval</button>
        </div>
        <div id="campaignStatus" class="text-sm"></div>
      </form>
    </div>

    <div class="p-4 bg-white shadow rounded">
      <div class="flex items-center justify-between mb-3">
        <h2 class="font-semibold">My Campaigns</h2>
        <button id="reloadCampaigns" class="px-3 py-1.5 border rounded">Reload</button>
      </div>
      <div class="overflow-x-auto">
        <table class="min-w-full text-sm">
          <thead>
            <tr class="border-b bg-gray-50">
              <th class="text-left p-2">Title</th>
              <th class="text-left p-2">Status</th>
              <th class="text-left p-2">Created</th>
            </tr>
          </thead>
          <tbody id="campaignsTableBody">
            <% (campaigns||[]).forEach(c => { %>
              <tr class="border-b">
                <td class="p-2"><%= c.title %></td>
                <td class="p-2"><span class="px-2 py-0.5 rounded text-white <%= c.status==='approved' ? 'bg-green-600' : (c.status==='rejected' ? 'bg-red-600' : 'bg-yellow-600') %>"><%= c.status %></span></td>
                <td class="p-2"><%= new Date(c.createdAt).toLocaleDateString() %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<script src="/public/js/ngo/dashboard.js"></script>
