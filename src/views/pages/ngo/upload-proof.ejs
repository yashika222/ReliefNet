<main class="ngo-upload-proof-page">
  <!-- Header -->
  <div class="ngo-page-header">
    <div class="container">
      <div class="ngo-page-header-content">
        <div>
          <h1 class="ngo-page-title">
            <i class="bi bi-file-earmark-arrow-up-fill"></i> Upload Proof Documents
          </h1>
          <p class="ngo-page-subtitle">Upload your NGO registration documents and verification proofs</p>
        </div>
        <a href="/ngo/dashboard" class="ngo-back-btn">
          <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
      </div>
    </div>
  </div>

  <!-- Alerts -->
  <% if (alerts?.success) { %>
    <div class="container mt-4">
      <div class="alert alert-success alert-dismissible fade show ngo-alert" role="alert">
        <i class="bi bi-check-circle-fill"></i> <%= alerts.success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    </div>
  <% } %>
  <% if (alerts?.error) { %>
    <div class="container mt-4">
      <div class="alert alert-danger alert-dismissible fade show ngo-alert" role="alert">
        <i class="bi bi-exclamation-circle-fill"></i> <%= alerts.error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    </div>
  <% } %>

  <!-- Content -->
  <div class="container mt-4">
    <div class="row g-4">
      <!-- Upload Form -->
      <div class="col-lg-6">
        <div class="ngo-card">
          <div class="ngo-card-header">
            <h2 class="ngo-card-title">
              <i class="bi bi-cloud-upload"></i> Upload New Document
            </h2>
            <p class="ngo-card-subtitle">Add verification documents to build trust</p>
          </div>
          <div class="ngo-card-body">
            <form id="uploadProofForm" enctype="multipart/form-data" class="ngo-form">
              <div class="ngo-form-group">
                <label class="ngo-form-label">Document Name <span class="text-danger">*</span></label>
                <input type="text" name="documentName" required class="ngo-form-input" 
                  placeholder="e.g., Registration Certificate, Tax Exemption Proof" />
              </div>
              
              <div class="ngo-form-group">
                <label class="ngo-form-label">Document Type <span class="text-danger">*</span></label>
                <select name="documentType" required class="ngo-form-input">
                  <option value="">Select document type</option>
                  <option value="registration">Registration Certificate</option>
                  <option value="tax_exemption">Tax Exemption Proof</option>
                  <option value="license">License Document</option>
                  <option value="other">Other</option>
                </select>
              </div>
              
              <div class="ngo-form-group">
                <label class="ngo-form-label">Upload File <span class="text-danger">*</span></label>
                <div class="ngo-file-upload">
                  <input type="file" name="document" required accept=".pdf,.jpg,.jpeg,.png" 
                    class="ngo-file-input" id="fileInput" />
                  <label for="fileInput" class="ngo-file-label">
                    <i class="bi bi-cloud-upload"></i>
                    <span>Choose file or drag and drop</span>
                    <small>PDF, JPG, PNG (Max 5MB)</small>
                  </label>
                </div>
                <div id="fileName" class="ngo-file-name"></div>
              </div>
              
              <div class="ngo-form-group">
                <label class="ngo-form-label">Description</label>
                <textarea name="description" rows="4" class="ngo-form-input"
                  placeholder="Additional information about this document"></textarea>
              </div>
              
              <button type="submit" class="ngo-btn ngo-btn-primary w-100">
                <i class="bi bi-upload"></i> Upload Document
              </button>
            </form>
          </div>
        </div>
      </div>

      <!-- Uploaded Documents -->
      <div class="col-lg-6">
        <div class="ngo-card">
          <div class="ngo-card-header">
            <h2 class="ngo-card-title">
              <i class="bi bi-folder-check"></i> Uploaded Documents
            </h2>
            <p class="ngo-card-subtitle"><%= ngo?.ngoProfile?.documents?.length || 0 %> document<%= (ngo?.ngoProfile?.documents?.length || 0) !== 1 ? 's' : '' %> uploaded</p>
          </div>
          <div class="ngo-card-body">
            <% if (ngo?.ngoProfile?.documents && ngo.ngoProfile.documents.length > 0) { %>
              <div class="ngo-documents-list">
                <% ngo.ngoProfile.documents.forEach((doc, index) => { %>
                  <div class="ngo-document-item">
                    <div class="ngo-document-icon">
                      <% if (doc.mimeType === 'application/pdf') { %>
                        <i class="bi bi-file-earmark-pdf-fill"></i>
                      <% } else { %>
                        <i class="bi bi-file-earmark-image-fill"></i>
                      <% } %>
                    </div>
                    <div class="ngo-document-content">
                      <h4 class="ngo-document-name"><%= doc.name || 'Document ' + (index + 1) %></h4>
                      <div class="ngo-document-meta">
                        <span class="ngo-document-type"><%= doc.type || 'Other' %></span>
                        <% if (doc.uploadedAt) { %>
                          <span class="ngo-document-date">
                            <i class="bi bi-calendar"></i>
                            <%= new Date(doc.uploadedAt).toLocaleDateString() %>
                          </span>
                        <% } %>
                      </div>
                      <% if (doc.status === 'verified') { %>
                        <span class="ngo-status-badge ngo-status-approved">
                          <i class="bi bi-check-circle-fill"></i> Verified
                        </span>
                      <% } else if (doc.status === 'rejected') { %>
                        <span class="ngo-status-badge ngo-status-rejected">
                          <i class="bi bi-x-circle-fill"></i> Rejected
                        </span>
                      <% } else { %>
                        <span class="ngo-status-badge ngo-status-pending">
                          <i class="bi bi-clock-fill"></i> Pending Review
                        </span>
                      <% } %>
                    </div>
                    <div class="ngo-document-actions">
                      <% if (doc.url) { %>
                        <a href="<%= doc.url %>" target="_blank" class="ngo-btn-icon" title="View document">
                          <i class="bi bi-eye"></i>
                        </a>
                        <a href="<%= doc.url %>" download class="ngo-btn-icon" title="Download document">
                          <i class="bi bi-download"></i>
                        </a>
                      <% } %>
                    </div>
                  </div>
                <% }) %>
              </div>
            <% } else { %>
              <div class="ngo-empty-state">
                <i class="bi bi-file-earmark"></i>
                <h4>No Documents Uploaded</h4>
                <p>Upload your first document using the form on the left to get started.</p>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>

    <!-- Guidelines Card -->
    <div class="ngo-guidelines-card">
      <div class="ngo-guidelines-icon">
        <i class="bi bi-info-circle-fill"></i>
      </div>
      <div class="ngo-guidelines-content">
        <h3>Document Upload Guidelines</h3>
        <ul class="ngo-guidelines-list">
          <li>
            <i class="bi bi-check-circle"></i>
            Upload clear, readable copies of your documents
          </li>
          <li>
            <i class="bi bi-check-circle"></i>
            Accepted formats: PDF, JPG, PNG (Maximum file size: 5MB)
          </li>
          <li>
            <i class="bi bi-check-circle"></i>
            Documents will be reviewed by admin before verification
          </li>
          <li>
            <i class="bi bi-check-circle"></i>
            You can upload multiple documents for different purposes
          </li>
          <li>
            <i class="bi bi-check-circle"></i>
            Verified documents help build trust with donors and volunteers
          </li>
        </ul>
      </div>
    </div>
  </div>
</main>

