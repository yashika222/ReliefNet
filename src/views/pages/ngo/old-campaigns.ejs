<main class="ngo-old-campaigns-page">
  <!-- Header -->
  <div class="ngo-page-header">
    <div class="container">
      <div class="ngo-page-header-content">
        <div>
          <h1 class="ngo-page-title">
            <i class="bi bi-archive-fill"></i> Old Campaigns
          </h1>
          <p class="ngo-page-subtitle">View your completed, rejected, or ended campaigns</p>
        </div>
        <a href="/ngo/dashboard" class="ngo-back-btn">
          <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
      </div>
    </div>
  </div>

  <!-- Content -->
  <div class="container mt-4">
    <% if (!campaigns || campaigns.length === 0) { %>
      <div class="ngo-empty-state">
        <div class="ngo-empty-icon">
          <i class="bi bi-archive"></i>
        </div>
        <h3>No Old Campaigns</h3>
        <p>You don't have any completed, rejected, or ended campaigns yet.</p>
        <a href="/ngo/dashboard" class="ngo-btn ngo-btn-primary mt-3">
          <i class="bi bi-arrow-left"></i> View Active Campaigns
        </a>
      </div>
    <% } else { %>
      <!-- Summary -->
      <div class="ngo-summary-card">
        <div class="ngo-summary-icon">
          <i class="bi bi-clock-history"></i>
        </div>
        <div class="ngo-summary-content">
          <h3>Campaign History</h3>
          <p>You have <strong><%= campaigns.length %></strong> campaign<%= campaigns.length !== 1 ? 's' : '' %> in your archive.</p>
        </div>
      </div>

      <!-- Campaigns Grid -->
      <div class="ngo-old-campaigns-grid">
        <% campaigns.forEach(campaign => { %>
          <div class="ngo-old-campaign-card">
            <div class="ngo-old-campaign-header">
              <div class="ngo-old-campaign-title-section">
                <h3 class="ngo-old-campaign-title"><%= campaign.title %></h3>
                <div class="ngo-old-campaign-dates">
                  <span class="ngo-date-item">
                    <i class="bi bi-calendar-plus"></i>
                    Created: <%= new Date(campaign.createdAt).toLocaleDateString() %>
                  </span>
                  <% if (campaign.endDate) { %>
                    <span class="ngo-date-item">
                      <i class="bi bi-calendar-x"></i>
                      Ended: <%= new Date(campaign.endDate).toLocaleDateString() %>
                    </span>
                  <% } %>
                </div>
              </div>
              <% if (campaign.status === 'approved') { %>
                <span class="ngo-status-badge ngo-status-approved">
                  <i class="bi bi-check-circle-fill"></i> Approved
                </span>
              <% } else if (campaign.status === 'rejected') { %>
                <span class="ngo-status-badge ngo-status-rejected">
                  <i class="bi bi-x-circle-fill"></i> Rejected
                </span>
              <% } else { %>
                <span class="ngo-status-badge ngo-status-pending">
                  <i class="bi bi-clock-fill"></i> <%= campaign.status.charAt(0).toUpperCase() + campaign.status.slice(1) %>
                </span>
              <% } %>
            </div>

            <% if (campaign.description) { %>
              <p class="ngo-old-campaign-description"><%= campaign.description %></p>
            <% } %>

            <div class="ngo-old-campaign-stats">
              <div class="ngo-stat-item">
                <div class="ngo-stat-item-icon">
                  <i class="bi bi-cash-coin"></i>
                </div>
                <div class="ngo-stat-item-content">
                  <span class="ngo-stat-item-label">Target Amount</span>
                  <span class="ngo-stat-item-value">â‚¹<%= campaign.targetAmount ? campaign.targetAmount.toLocaleString() : '0' %></span>
                </div>
              </div>
              
              <div class="ngo-stat-item">
                <div class="ngo-stat-item-icon">
                  <i class="bi bi-calendar-event"></i>
                </div>
                <div class="ngo-stat-item-content">
                  <span class="ngo-stat-item-label">Start Date</span>
                  <span class="ngo-stat-item-value">
                    <%= campaign.startDate ? new Date(campaign.startDate).toLocaleDateString() : 'Not set' %>
                  </span>
                </div>
              </div>
              
              <div class="ngo-stat-item">
                <div class="ngo-stat-item-icon">
                  <i class="bi bi-calendar-check"></i>
                </div>
                <div class="ngo-stat-item-content">
                  <span class="ngo-stat-item-label">End Date</span>
                  <span class="ngo-stat-item-value">
                    <%= campaign.endDate ? new Date(campaign.endDate).toLocaleDateString() : 'Not set' %>
                  </span>
                </div>
              </div>
              
              <div class="ngo-stat-item">
                <div class="ngo-stat-item-icon">
                  <i class="bi bi-info-circle"></i>
                </div>
                <div class="ngo-stat-item-content">
                  <span class="ngo-stat-item-label">Status</span>
                  <span class="ngo-stat-item-value capitalize"><%= campaign.status %></span>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>
</main>

