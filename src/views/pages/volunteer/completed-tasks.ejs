<main class="volunteer-completed-page">
  <!-- Header -->
  <div class="volunteer-page-header">
    <div class="container">
      <div class="volunteer-page-header-content">
        <div>
          <h1 class="volunteer-page-title">
            <i class="bi bi-check-circle-fill"></i> Completed Tasks
          </h1>
          <p class="volunteer-page-subtitle">View all tasks you have successfully completed</p>
        </div>
        <a href="/volunteer/dashboard" class="volunteer-back-btn">
          <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
      </div>
    </div>
  </div>

  <!-- Alerts -->
  <% if (alerts?.success) { %>
    <div class="container mt-4">
      <div class="alert alert-success alert-dismissible fade show volunteer-alert" role="alert">
        <i class="bi bi-check-circle-fill"></i> <%= alerts.success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    </div>
  <% } %>
  <% if (alerts?.error) { %>
    <div class="container mt-4">
      <div class="alert alert-danger alert-dismissible fade show volunteer-alert" role="alert">
        <i class="bi bi-exclamation-circle-fill"></i> <%= alerts.error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    </div>
  <% } %>

  <!-- Content -->
  <div class="container mt-4">
    <% if (!tasks.length) { %>
      <div class="volunteer-empty-state">
        <div class="volunteer-empty-icon">
          <i class="bi bi-check-circle"></i>
        </div>
        <h3>No Completed Tasks Yet</h3>
        <p>Complete your assigned tasks to see them here. Your completed work will be displayed with full details and reports.</p>
        <a href="/volunteer/dashboard" class="volunteer-btn volunteer-btn-primary mt-3">
          <i class="bi bi-arrow-left"></i> View Active Tasks
        </a>
      </div>
    <% } else { %>
      <!-- Summary Card -->
      <div class="volunteer-summary-card">
        <div class="volunteer-summary-icon">
          <i class="bi bi-trophy-fill"></i>
        </div>
        <div class="volunteer-summary-content">
          <h3>Great Work!</h3>
          <p>You have completed <strong><%= tasks.length %></strong> task<%= tasks.length !== 1 ? 's' : '' %> successfully.</p>
        </div>
      </div>

      <!-- Tasks Grid -->
      <div class="volunteer-completed-tasks-grid">
        <% tasks.forEach(task => { 
          const priorityColors = {
            critical: 'danger',
            high: 'warning',
            medium: 'info',
            low: 'secondary'
          };
          const priorityColor = priorityColors[task.priority] || 'info';
        %>
          <div class="volunteer-completed-task-card">
            <div class="volunteer-completed-task-header">
              <div class="volunteer-completed-task-title-section">
                <h3 class="volunteer-completed-task-title">
                  <i class="bi bi-check-circle-fill text-success"></i>
                  <%= task.title %>
                </h3>
                <% if (task.priority) { %>
                  <span class="volunteer-priority-badge volunteer-priority-<%= priorityColor %>">
                    <%= task.priority.charAt(0).toUpperCase() + task.priority.slice(1) %>
                  </span>
                <% } %>
              </div>
              <span class="volunteer-status-badge volunteer-status-completed">
                <i class="bi bi-check-circle-fill"></i> Completed
              </span>
            </div>

            <% if (task.description) { %>
              <p class="volunteer-completed-task-description"><%= task.description %></p>
            <% } %>

            <div class="volunteer-completed-task-info">
              <div class="volunteer-info-row">
                <div class="volunteer-info-item">
                  <i class="bi bi-calendar-check-fill"></i>
                  <div>
                    <span class="volunteer-info-label">Completed</span>
                    <span class="volunteer-info-value">
                      <% if (task.completedAt) { %>
                        <%= new Date(task.completedAt).toLocaleDateString() %> at <%= new Date(task.completedAt).toLocaleTimeString() %>
                      <% } else { %>
                        N/A
                      <% } %>
                    </span>
                  </div>
                </div>
                <div class="volunteer-info-item">
                  <i class="bi bi-calendar-event"></i>
                  <div>
                    <span class="volunteer-info-label">Deadline</span>
                    <span class="volunteer-info-value">
                      <%= task.deadline ? new Date(task.deadline).toLocaleDateString() : 'No deadline' %>
                    </span>
                  </div>
                </div>
              </div>
              
              <div class="volunteer-info-row">
                <div class="volunteer-info-item">
                  <i class="bi bi-geo-alt-fill"></i>
                  <div>
                    <span class="volunteer-info-label">Disaster</span>
                    <span class="volunteer-info-value"><%= task.disaster?.title || 'General mission' %></span>
                    <% if (task.disaster?.location) { %>
                      <span class="volunteer-info-subtext"><%= task.disaster.location %></span>
                    <% } %>
                  </div>
                </div>
                <div class="volunteer-info-item">
                  <i class="bi bi-file-earmark-text-fill"></i>
                  <div>
                    <span class="volunteer-info-label">Report</span>
                    <span class="volunteer-info-value">
                      <% if (task.report?.submittedAt) { %>
                        <span class="text-success">Submitted</span>
                      <% } else { %>
                        <span class="text-muted">No report</span>
                      <% } %>
                    </span>
                  </div>
                </div>
              </div>
            </div>

            <% if (task.report) { %>
              <div class="volunteer-completed-task-report">
                <button type="button" class="volunteer-btn volunteer-btn-outline" data-bs-toggle="modal" data-bs-target="#reportModal<%= task._id %>">
                  <i class="bi bi-eye"></i> View Full Report
                </button>
                
                <!-- Report Modal -->
                <div class="modal fade" id="reportModal<%= task._id %>" tabindex="-1">
                  <div class="modal-dialog modal-lg modal-dialog-scrollable">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title">
                          <i class="bi bi-file-earmark-text"></i> Task Report: <%= task.title %>
                        </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                      </div>
                      <div class="modal-body">
                        <div class="volunteer-report-section">
                          <h6 class="volunteer-report-section-title">Description</h6>
                          <p class="volunteer-report-text"><%= task.report.description %></p>
                        </div>
                        
                        <% if (task.report.attachments && task.report.attachments.length > 0) { %>
                          <div class="volunteer-report-section">
                            <h6 class="volunteer-report-section-title">Attachments</h6>
                            <div class="volunteer-attachments-grid">
                              <% task.report.attachments.forEach(att => { %>
                                <a href="<%= att.url %>" target="_blank" class="volunteer-attachment-card">
                                  <i class="bi bi-file-earmark-pdf-fill"></i>
                                  <span><%= att.originalName %></span>
                                  <i class="bi bi-download"></i>
                                </a>
                              <% }) %>
                            </div>
                          </div>
                        <% } %>
                        
                        <div class="volunteer-report-meta">
                          <i class="bi bi-clock"></i>
                          Submitted on <%= new Date(task.report.submittedAt).toLocaleString() %>
                        </div>
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="volunteer-btn volunteer-btn-outline" data-bs-dismiss="modal">Close</button>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% } %>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>
</main>

