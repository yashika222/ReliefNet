<main class="container py-5" style="max-width: 960px;">
  <div class="card shadow-sm border-0">
    <div class="card-body p-4 p-md-5">
      <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4">
        <div>
          <p class="text-uppercase text-muted small mb-1">Volunteer Enrollment</p>
          <h1 class="h3 mb-0">Join the Rapid Response Network</h1>
          <p class="text-muted mt-2 mb-0">Complete the form below to submit your application. Our admin team reviews new applications within 24 hours.</p>
        </div>
        <div class="mt-3 mt-md-0">
          <a href="/auth/login" class="btn btn-outline-secondary">Already registered?</a>
        </div>
      </div>

      <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger"><%= error %></div>
      <% } %>
      <% if (typeof success !== 'undefined' && success) { %>
        <div class="alert alert-success"><%= success %></div>
      <% } %>

      <form action="/volunteer/register" method="POST" enctype="multipart/form-data" class="row g-4">
        <div class="col-md-6">
          <label class="form-label fw-semibold">Full Name</label>
          <input type="text" name="name" class="form-control" required value="<%= form?.name || '' %>" placeholder="e.g. Aisha Khan">
        </div>
        <div class="col-md-6">
          <label class="form-label fw-semibold">Email</label>
          <input type="email" name="email" class="form-control" required value="<%= form?.email || '' %>" placeholder="you@example.com">
        </div>
        <div class="col-md-6">
          <label class="form-label fw-semibold">Password</label>
          <input type="password" name="password" class="form-control" required minlength="6" placeholder="Create a strong password">
        </div>
        <div class="col-md-6">
          <label class="form-label fw-semibold">Phone</label>
          <input type="tel" name="phone" class="form-control" required value="<%= form?.phone || '' %>" placeholder="Contact number">
        </div>
        <div class="col-md-6">
          <label class="form-label fw-semibold">City</label>
          <input type="text" name="city" class="form-control" required value="<%= form?.city || '' %>" placeholder="City of residence">
        </div>
        <div class="col-md-6">
          <label class="form-label fw-semibold">State / Region</label>
          <input type="text" name="state" class="form-control" required value="<%= form?.state || '' %>" placeholder="State or region">
        </div>
        <div class="col-md-6">
          <label class="form-label fw-semibold">Skills</label>
          <input type="text" name="skills" class="form-control" value="<%= form?.skills || '' %>" placeholder="e.g. First aid, Logistics, Rescue">
          <div class="form-text">Comma-separated skills help us match you with the right missions.</div>
        </div>
        <div class="col-md-6">
          <label class="form-label fw-semibold">Availability</label>
          <select name="availability" class="form-select" required>
            <option value="">Select availability</option>
            <option value="full_time" <%= form?.availability === 'full_time' ? 'selected' : '' %>>Full-time</option>
            <option value="part_time" <%= form?.availability === 'part_time' ? 'selected' : '' %>>Part-time</option>
            <option value="weekends" <%= form?.availability === 'weekends' ? 'selected' : '' %>>Weekends</option>
            <option value="ad_hoc" <%= form?.availability === 'ad_hoc' ? 'selected' : '' %>>Ad-hoc deployments</option>
          </select>
        </div>
        <div class="col-12">
          <label class="form-label fw-semibold">ID Proof (PDF / JPG / PNG)</label>
          <input type="file" name="idProof" class="form-control" accept=".pdf,.jpg,.jpeg,.png" required>
          <div class="form-text">Upload a government-issued ID or training certificate (max 5MB).</div>
        </div>
        <div class="col-12 d-flex justify-content-end">
          <button class="btn btn-primary btn-lg" type="submit">
            Submit Application
          </button>
        </div>
      </form>
    </div>
  </div>
</main>

