<main class="volunteer-dashboard">
  <!-- Hero Section -->
  <div class="volunteer-hero">
    <div class="container">
      <div class="volunteer-hero-content">
        <div class="volunteer-hero-main">
          <div class="volunteer-avatar">
            <i class="bi bi-person-circle"></i>
          </div>
          <div class="volunteer-hero-text">
            <h1 class="volunteer-hero-title">Welcome back, <%= user?.name || 'Volunteer' %>!</h1>
            <div class="volunteer-hero-meta">
              <% if (user?.approvalStatus === 'approved') { %>
                <span class="volunteer-badge volunteer-badge-success">
                  <i class="bi bi-check-circle-fill"></i> Approved
                </span>
              <% } else if (volunteer?.approvalStatus === 'rejected') { %>
                <span class="volunteer-badge volunteer-badge-danger">
                  <i class="bi bi-x-circle-fill"></i> Rejected
                </span>
              <% } else { %>
                <span class="volunteer-badge volunteer-badge-warning">
                  <i class="bi bi-clock-fill"></i> Pending Review
                </span>
              <% } %>
              <% if (volunteer?.blocked) { %>
                <span class="volunteer-badge volunteer-badge-danger">
                  <i class="bi bi-lock-fill"></i> Blocked
                </span>
              <% } %>
              <span class="volunteer-location">
                <i class="bi bi-geo-alt-fill"></i> <%= volunteer?.volunteerProfile?.currentLocation || 'Location not set' %>
              </span>
            </div>
          </div>
        </div>
        <a href="/volunteer/tasks/completed" class="volunteer-cta-btn">
          <i class="bi bi-check-circle"></i>
          View Completed (<%= stats.completed %>)
        </a>
      </div>
    </div>
  </div>

  <!-- Alerts -->
  <% if (alerts?.success) { %>
    <div class="container mt-4">
      <div class="alert alert-success alert-dismissible fade show volunteer-alert" role="alert">
        <i class="bi bi-check-circle-fill"></i> <%= alerts.success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    </div>
  <% } %>
  <% if (alerts?.error) { %>
    <div class="container mt-4">
      <div class="alert alert-danger alert-dismissible fade show volunteer-alert" role="alert">
        <i class="bi bi-exclamation-circle-fill"></i> <%= alerts.error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    </div>
  <% } %>

  <!-- Stats Cards -->
  <div class="container mt-4">
    <div class="volunteer-stats-grid">
      <div class="volunteer-stat-card">
        <div class="volunteer-stat-icon volunteer-stat-icon-primary">
          <i class="bi bi-clipboard-check"></i>
        </div>
        <div class="volunteer-stat-content">
          <div class="volunteer-stat-value"><%= stats.assigned %></div>
          <div class="volunteer-stat-label">Total Assigned</div>
        </div>
      </div>
      
      <div class="volunteer-stat-card">
        <div class="volunteer-stat-icon volunteer-stat-icon-info">
          <i class="bi bi-arrow-repeat"></i>
        </div>
        <div class="volunteer-stat-content">
          <div class="volunteer-stat-value"><%= stats.inProgress %></div>
          <div class="volunteer-stat-label">In Progress</div>
        </div>
      </div>
      
      <div class="volunteer-stat-card volunteer-stat-card-success">
        <div class="volunteer-stat-icon volunteer-stat-icon-success">
          <i class="bi bi-check-circle"></i>
        </div>
        <div class="volunteer-stat-content">
          <div class="volunteer-stat-value"><%= stats.completed %></div>
          <div class="volunteer-stat-label">Completed</div>
        </div>
      </div>
      
      <div class="volunteer-stat-card volunteer-stat-card-danger">
        <div class="volunteer-stat-icon volunteer-stat-icon-danger">
          <i class="bi bi-exclamation-triangle"></i>
        </div>
        <div class="volunteer-stat-content">
          <div class="volunteer-stat-value"><%= stats.overdue %></div>
          <div class="volunteer-stat-label">Overdue</div>
        </div>
      </div>
    </div>
  </div>

  <!-- Active Tasks Section -->
  <div class="container mt-5">
    <div class="volunteer-section-header">
      <div>
        <h2 class="volunteer-section-title">
          <i class="bi bi-list-task"></i> Active Tasks
        </h2>
        <p class="volunteer-section-subtitle">Manage your assigned tasks and track progress</p>
      </div>
    </div>

    <% if (!tasks.length) { %>
      <div class="volunteer-empty-state">
        <div class="volunteer-empty-icon">
          <i class="bi bi-inbox"></i>
        </div>
        <h3>No Active Tasks</h3>
        <p>You don't have any active tasks assigned at the moment. Check back later for new assignments!</p>
      </div>
    <% } else { %>
      <div class="volunteer-tasks-grid">
        <% tasks.forEach(task => { 
          const overdue = task.status !== 'completed' && task.deadline && new Date(task.deadline) < new Date();
          const priorityColors = {
            critical: 'danger',
            high: 'warning',
            medium: 'info',
            low: 'secondary'
          };
          const priorityColor = priorityColors[task.priority] || 'info';
        %>
          <div class="volunteer-task-card <%= overdue ? 'volunteer-task-card-overdue' : '' %>">
            <div class="volunteer-task-header">
              <div class="volunteer-task-title-section">
                <h3 class="volunteer-task-title"><%= task.title %></h3>
                <% if (task.priority) { %>
                  <span class="volunteer-priority-badge volunteer-priority-<%= priorityColor %>">
                    <%= task.priority.charAt(0).toUpperCase() + task.priority.slice(1) %>
                  </span>
                <% } %>
              </div>
              <% if (task.status === 'completed') { %>
                <span class="volunteer-status-badge volunteer-status-completed">
                  <i class="bi bi-check-circle-fill"></i> Completed
                </span>
              <% } else if (task.status === 'in_progress') { %>
                <span class="volunteer-status-badge volunteer-status-progress">
                  <i class="bi bi-arrow-repeat"></i> In Progress
                </span>
              <% } else { %>
                <span class="volunteer-status-badge volunteer-status-assigned <%= overdue ? 'volunteer-status-overdue' : '' %>">
                  <i class="bi bi-clock-fill"></i> <%= overdue ? 'Overdue' : 'Assigned' %>
                </span>
              <% } %>
            </div>

            <% if (task.description) { %>
              <p class="volunteer-task-description"><%= task.description %></p>
            <% } %>

            <div class="volunteer-task-meta">
              <div class="volunteer-task-meta-item">
                <i class="bi bi-calendar-event"></i>
                <span><%= task.deadline ? new Date(task.deadline).toLocaleDateString() : 'No deadline' %></span>
              </div>
              <div class="volunteer-task-meta-item">
                <i class="bi bi-geo-alt"></i>
                <span><%= task.disaster?.title || 'General mission' %></span>
              </div>
            </div>

            <div class="volunteer-task-actions">
              <% if (task.status === 'assigned') { %>
                <form action="/volunteer/tasks/<%= task._id %>/status" method="POST" class="d-inline">
                  <input type="hidden" name="status" value="in_progress">
                  <button type="submit" class="volunteer-btn volunteer-btn-primary">
                    <i class="bi bi-play-fill"></i> Accept Task
                  </button>
                </form>
              <% } %>
              
              <% if (task.status !== 'completed') { %>
                <form action="/volunteer/tasks/<%= task._id %>/status" method="POST" class="d-inline">
                  <input type="hidden" name="status" value="completed">
                  <button type="submit" class="volunteer-btn volunteer-btn-success">
                    <i class="bi bi-check-circle"></i> Mark Complete
                  </button>
                </form>
                
                <button type="button" class="volunteer-btn volunteer-btn-outline" data-bs-toggle="collapse" data-bs-target="#reportForm<%= task._id %>">
                  <i class="bi bi-file-earmark-text"></i> Submit Report
                </button>
              <% } %>
            </div>

            <!-- Report Form (Collapsible) -->
            <% if (task.status !== 'completed') { %>
              <div class="collapse mt-3" id="reportForm<%= task._id %>">
                <div class="volunteer-report-form">
                  <form action="/volunteer/tasks/<%= task._id %>/report" method="POST" enctype="multipart/form-data">
                    <div class="mb-3">
                      <label class="form-label fw-semibold">Report Description <span class="text-danger">*</span></label>
                      <textarea name="description" class="form-control" rows="4" placeholder="Describe the work completed, challenges faced, and outcomes achieved..." required></textarea>
                    </div>
                    <div class="mb-3">
                      <label class="form-label fw-semibold">Attachments</label>
                      <input type="file" name="attachments" class="form-control" accept=".jpg,.jpeg,.png,.pdf" multiple>
                      <small class="text-muted">Upload photos or documents (JPG, PNG, PDF - Max 8MB each)</small>
                    </div>
                    <button type="submit" class="volunteer-btn volunteer-btn-primary">
                      <i class="bi bi-upload"></i> Submit Report
                    </button>
                  </form>
                </div>
              </div>
            <% } %>

            <% if (task.report?.submittedAt) { %>
              <div class="volunteer-task-report-submitted">
                <i class="bi bi-check-circle-fill text-success"></i>
                <span>Report submitted on <%= new Date(task.report.submittedAt).toLocaleString() %></span>
              </div>
            <% } %>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>

  <!-- Quick Actions & Info -->
  <div class="container mt-5 mb-5">
    <div class="row g-4">
      <div class="col-md-6">
        <div class="volunteer-info-card">
          <div class="volunteer-info-icon">
            <i class="bi bi-info-circle-fill"></i>
          </div>
          <h4>Profile Tips</h4>
          <p>Keep your skills and availability updated so coordinators can assign the right missions to you.</p>
        </div>
      </div>
      <div class="col-md-6">
        <div class="volunteer-info-card volunteer-info-card-warning">
          <div class="volunteer-info-icon">
            <i class="bi bi-clock-history"></i>
          </div>
          <h4>Task Deadlines</h4>
          <p>Complete overdue tasks promptly to avoid automatic warnings and maintain your volunteer status.</p>
        </div>
      </div>
    </div>
  </div>
</main>

