      <div class="chart-wrapper">
        <canvas id="severityChart"></canvas>
        <p class="empty-state" data-empty="severityChart">No severity data available.</p>
      </div>
    </article>
  </section>

  <section class="tables-grid">
    <article class="table-card">
      <header>
        <div>
          <h2>Recent Donations</h2>
          <p>Latest five contributions across the platform.</p>
        </div>
      </header>
      <div class="table-wrapper">
        <table>
          <thead>
            <tr>
              <th>Donor Name</th>
              <th>Amount (&#8377;)</th>
              <th>Disaster</th>
              <th>Date</th>
            </tr>
          </thead>
          <tbody data-table="recent-donations"></tbody>
        </table>
        <p class="empty-state" data-empty="recent-donations">No donations have been recorded yet.</p>
      </div>
    </article>

    <article class="table-card">
      <header>
        <div>
          <h2>Volunteer Performance</h2>
          <p>Task completion status for registered volunteers.</p>
        </div>
      </header>
      <div class="table-wrapper">
        <table>
          <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Completed Tasks</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody data-table="volunteers"></tbody>
        </table>
        <p class="empty-state" data-empty="volunteers">No volunteers found.</p>
      </div>
    </article>

    <article class="table-card">
      <header>
        <div>
          <h2>Recent Disaster Alerts</h2>
          <p>Latest disaster updates from the field.</p>
        </div>
      </header>
      <div class="table-wrapper">
        <table>
          <thead>
            <tr>
              <th>Title</th>
              <th>Severity</th>
              <th>Created At</th>
            </tr>
          </thead>
          <tbody data-table="disasters"></tbody>
        </table>
        <p class="empty-state" data-empty="disasters">No disaster alerts available.</p>
      </div>
    </article>
  </section>

  <div class="page-loading" id="dashboardLoader">
    <div class="spinner"></div>
    <p>Loading analytics...</p>
  </div>
