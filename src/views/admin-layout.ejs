<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title || 'Admin Panel' %></title>
  <link rel="icon" type="image/svg+xml" href="/public/img/favicon.svg">

  <!-- Bootstrap & Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

  <!-- Custom Admin CSS -->
  <link rel="stylesheet" href="/public/css/main.css">
  <link rel="stylesheet" href="/public/css/components.css">
  <link rel="stylesheet" href="/public/css/admin.css">
</head>

<body class="admin-body">
  <!-- ===== Header ===== -->
  <header class="admin-topbar">
    <div class="admin-topbar__brand">
      <a href="/admin/dashboard" class="admin-topbar__logo">Disaster Relief Admin</a>
    </div>
    <div class="admin-topbar__meta">
      <button class="btn btn-light btn-icon d-md-none" id="adminSidebarToggle" aria-label="Toggle navigation">
        <i class="bi bi-list"></i>
      </button>
      <% if (user) { %>
        <div class="admin-user-pill">
          <span class="admin-user-pill__avatar"><i class="bi bi-person-circle"></i></span>
          <div class="admin-user-pill__body">
            <span class="admin-user-pill__name"><%= user.name %></span>
            <span class="admin-user-pill__role"><%= user.role %></span>
          </div>
        </div>
      <% } %>
    </div>
  </header>

  <!-- ===== Main Layout Shell ===== -->
  <div class="admin-shell">
    <aside class="admin-sidebar" id="adminSidebar">
      <nav>
        <ul class="admin-sidebar__nav">
          <li><a href="/admin/dashboard" class="<%= activePage === 'dashboard' ? 'active' : '' %>"><i class="bi bi-grid-1x2"></i> Dashboard</a></li>
          <li><a href="/admin/manage-volunteers" class="<%= activePage === 'manage-volunteers' ? 'active' : '' %>"><i class="bi bi-people"></i> Manage Volunteers</a></li>
          <li><a href="/admin/manage-users" class="<%= activePage === 'manage-users' ? 'active' : '' %>"><i class="bi bi-person-lines-fill"></i> Manage Users</a></li>
          <li><a href="/admin/approvals" class="<%= activePage === 'approvals' ? 'active' : '' %>"><i class="bi bi-clipboard-check"></i> Approvals</a></li>
        </ul>
      </nav>

      <div class="admin-sidebar__footer">
        <a href="/" class="admin-sidebar__link">
          <i class="bi bi-arrow-left-circle"></i>
          Back to site
        </a>
      </div>
    </aside>

    <main class="admin-content">
      <div class="admin-content__inner">
        <%- body %>
      </div>
    </main>
  </div>

  <!-- ===== Footer ===== -->
  <footer class="admin-footer">
    <div class="admin-footer__content">
      <span>Â© <%= new Date().getFullYear() %> Disaster Relief Management System</span>
      <span>Built for rapid-response operations</span>
    </div>
  </footer>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" defer></script>
  <script src="/public/js/admin/sidebar-toggle.js" defer></script>

</body>
</html>
